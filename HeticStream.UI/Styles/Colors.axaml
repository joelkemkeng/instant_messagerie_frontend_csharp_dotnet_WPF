<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Dark Theme Colors -->
    <Color x:Key="DarkBackgroundColor">#1E1E1E</Color>
    <Color x:Key="DarkSidebarColor">#2D2D2D</Color>
    <Color x:Key="DarkAccentColor">#7289DA</Color>
    <Color x:Key="DarkTextColor">#FFFFFF</Color>
    <Color x:Key="DarkSecondaryTextColor">#B9BBBE</Color>
    <Color x:Key="DarkBorderColor">#3A3A3A</Color>
    <Color x:Key="DarkHighlightColor">#3C3F45</Color>
    <Color x:Key="DarkInputBackgroundColor">#2F3136</Color>
    <Color x:Key="DarkSuccessColor">#43B581</Color>
    <Color x:Key="DarkErrorColor">#F04747</Color>
    <Color x:Key="DarkWarningColor">#FAA61A</Color>
    
    <!-- Light Theme Colors -->
    <Color x:Key="LightBackgroundColor">#FFFFFF</Color>
    <Color x:Key="LightSidebarColor">#F2F2F2</Color>
    <Color x:Key="LightAccentColor">#7289DA</Color>
    <Color x:Key="LightTextColor">#2E3338</Color>
    <Color x:Key="LightSecondaryTextColor">#747F8D</Color>
    <Color x:Key="LightBorderColor">#DBDBDB</Color>
    <Color x:Key="LightHighlightColor">#F6F6F7</Color>
    <Color x:Key="LightInputBackgroundColor">#EBEDEF</Color>
    <Color x:Key="LightSuccessColor">#43B581</Color>
    <Color x:Key="LightErrorColor">#F04747</Color>
    <Color x:Key="LightWarningColor">#FAA61A</Color>
    
    <!-- Dynamic theme brushes that switch between light and dark -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{DynamicResource BackgroundColor}" />
    <SolidColorBrush x:Key="SidebarBrush" Color="{DynamicResource SidebarColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{DynamicResource AccentColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{DynamicResource TextColor}" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{DynamicResource SecondaryTextColor}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{DynamicResource BorderColor}" />
    <SolidColorBrush x:Key="HighlightBrush" Color="{DynamicResource HighlightColor}" />
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="{DynamicResource InputBackgroundColor}" />
    <SolidColorBrush x:Key="SuccessBrush" Color="{DynamicResource SuccessColor}" />
    <SolidColorBrush x:Key="ErrorBrush" Color="{DynamicResource ErrorColor}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{DynamicResource WarningColor}" />
</ResourceDictionary>